! include: cell_top_coor.inc sel_basis_pot.inc 

&GLOBAL
  PROJECT               MOF5
  RUN_TYPE              ENERGY_FORCE
  PRINT_LEVEL           MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME GTH_POTENTIALS

    CHARGE =            0

    &MGRID
      CUTOFF            1000.0
      NGRIDS            5
      REL_CUTOFF        60
    &END MGRID

    &QS
      METHOD            GPW
      EPS_DEFAULT       1.0E-10
    &END QS

    &POISSON
     PERIODIC 		XYZ #########################
    &END POISSON

    &SCF
      SCF_GUESS         ATOMIC
      EPS_SCF           1.0E-7
      MAX_SCF           30

      &OT 
        MINIMIZER       CG
        PRECONDITIONER  FULL_ALL
        #ENERGY_GAP      0.0001
      &END OT

      &OUTER_SCF
        EPS_SCF         1E-7
        MAX_SCF         50
      &END OUTER_SCF     

    &END SCF

    &XC
      &XC_FUNCTIONAL    PBE
      &END XC_FUNCTIONAL
    &END XC

    &PRINT
     &E_DENSITY_CUBE
      STRIDE 1 1 1
     &END E_DENSITY_CUBE
    &END PRINT

  &END DFT

  &SUBSYS
    @INCLUDE            'cell_top_coor.inc'
    @INCLUDE            'sel_basis_pot.inc'
  &END SUBSYS

  &PRINT
    &FORCES             ON
      FILENAME          =forces
    &END FORCES
    &STRESS_TENSOR      ON
	FILENAME        =stress
    &END STRESS_TENSOR
  &END PRINT

  STRESS_TENSOR         ANALYTICAL  

&END FORCE_EVAL



